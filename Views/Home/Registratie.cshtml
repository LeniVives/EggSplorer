@model EggSplorer.Models.Users

@{
	ViewBag.Title = "Registratie";
}

<h2>Registration</h2>

<form asp-action="Registratie" method="post" class="m-2">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="FirstName" class="form-label">Voornaam:</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="form-label">Achternaam:</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-label">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="form-label">Telefoonnummer:</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-label">Paswoord:</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <input asp-for="IsAdmin" type="hidden" value="False" />
    <input asp-for="IsApproved" type="hidden" value="False" />

    <button type="submit" class="btn btn-success mt-3">Maak aan</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary" style="margin-top:16px">Home</a>
</form>