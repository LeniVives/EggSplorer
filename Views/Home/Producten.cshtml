@model List<EggSplorer.Models.Products>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Producten</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th class="col-lg-3 text-center">
                    Image
                </th>
                <th class="col-lg-2">
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th class="col-lg-5">
                    @Html.DisplayNameFor(model => model.First().Description)
                </th>
                <th class="col-lg-1">
                    @Html.DisplayNameFor(model => model.First().ProductPrice)
                </th>

            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-lg-3 text-center">
                        @{
                            var img = item.Id.ToString() + ".jpg";
                        }
                        <img class="img-fluid" src="~/images/@img" style="height:100px; object-fit:cover">
                    </td>
                    <td class="col-lg-2">
                        @item.Name
                    </td>
                    <td class="col-lg-5">
                        @item.Description
                    </td>
                    <td class="col-lg-1">
                        € @item.ProductPrice
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
